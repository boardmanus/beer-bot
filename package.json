{
  "name": "beerbot",
  "version": "1.0.0",
  "description": "Records information and displays information from a tilt.",
  "main": "dist-server/src/server/server.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "nodemon --watch dist-server dist-server/src/server/server.js",
    "transpile": "tsc --build src/server src/client",
    "prebuild": "npm run transpile",
    "build": "browserify dist-client/client/client.js -d -o public/scripts/client.js",
    "prebuild-prod": "npm run transpile",
    "build-prod": "browserify dist-client/client/client.ts -p tinyify -d -o public/scripts/client.js"
  },
  "keywords": [
    "tilt",
    "pi"
  ],
  "author": "Craig Boardman",
  "license": "ISC",
  "dependencies": {
    "@svgdotjs/svg.js": "^3.0.16",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jquery": "^3.4.1",
    "pug": "^3.0.2",
    "request": "^2.88.2",
    "socket.io": "^4.1.2",
    "socket.io-client": "^4.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/jquery": "^3.5.5",
    "@types/node": "^15.12.1",
    "@types/request": "^2.48.5",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "browserify": "^16.5.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.3.1",
    "sourceify": "^1.0.0",
    "tinyify": "^3.0.0"
  },
  "browserify": {
    "transform": [
      "sourceify"
    ]
  }
}
