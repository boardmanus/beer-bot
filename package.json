{
  "name": "beerbot",
  "version": "1.0.1",
  "description": "Records information and displays information from a tilt.",
  "main": "server.js",
  "scripts": {
    "clean": "rm -rf dist dist-pro",
    "copyassets:dev": "mkdir -p dist-dev/config && cp -rf src/public src/views dist-dev/",
    "copyassets:pro": "mkdir -p dist-pro/config && cp -rf src/public src/views dist-pro/",
    "build:dev": "pnpm run copyassets:dev && pnpm run build:server:dev && pnpm run build:client:dev",
    "build:pro": "pnpm run copyassets:pro && pnpm run build:server:pro && pnpm run build:client:pro",
    "run:dev": "nodemon dist/server.js",
    "run:pro": "node dist-pro/server.js",
    "start:dev": "pnpm run build:dev && pnpm run run:dev",
    "start:pro": "pnpm run build:pro && pnpm run run:pro",
    "build:client:dev": "esbuild src/client/client.ts --sourcemap --platform=browser --bundle --outfile=dist-dev/public/scripts/client.js --metafile=client-dev-metafile.json",
    "build:server:dev": "esbuild src/server/server.ts --sourcemap --platform=node --bundle --packages=external --outfile=dist-dev/server.js --metafile=server-dev-metafile.json",
    "build:client:pro": "esbuild src/client/client.ts --sourcemap --platform=browser --bundle --minify --outfile=dist-pro/public/scripts/client.js --metafile=client-pro-metafile.json",
    "build:server:pro": "esbuild src/server/server.ts --sourcemap --platform=node --bundle --packages=external --minify --outfile=dist-pro/server.js --metafile=server-pro-metafile.json",
    "test": "jest",
    "check:server": "tsc --noEmit --project src/server/tsconfig.json",
    "check:client": "tsc --noEmit --project src/client/tsconfig.json",
    "check": "pnpm run check:server && pnpm run check:client"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "package.json"
    ],
    "ignore": [
      "node_modules"
    ],
    "ext": "ts,js,json,pug",
    "exec": "pnpm run build:dev && node ./dist-dev/server.js",
    "legacyWatch": true
  },
  "keywords": [
    "tilt",
    "pi"
  ],
  "author": "Craig Boardman",
  "license": "ISC",
  "dependencies": {
    "@abandonware/noble": "1.9.2-26",
    "@svgdotjs/svg.js": "^3.2.5",
    "body-parser": "^2.2.2",
    "express": "^5.2.1",
    "needle": "^3.3.1",
    "node-beacon-scanner": "^0.2.2",
    "pug": "^3.0.3",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.23.2",
    "@eslint/object-schema": "^3.0.2",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/needle": "^3.3.0",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "es-jest": "^2.1.0",
    "esbuild": "^0.27.3",
    "esbuild-node-tsc": "^2.0.5",
    "esbuild-plugin-pug": "^0.0.8",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "nodemon": "^3.1.14",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "tar": "^7.5.9"
    }
  }
}