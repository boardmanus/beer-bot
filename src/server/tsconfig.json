{
  "compilerOptions": {
    "module": "Preserve",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "../../dist-server",
    "baseUrl": ".",
    "paths": {
      "config/*": ["../config/*"],
      "common/*": ["../common/*"]
    },
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["./*.ts", "../common/*.ts"]
}
