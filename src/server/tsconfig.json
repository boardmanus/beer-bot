{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "allowJs": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "typeRoots": [
        "./node_modules/@types"
        ],
        "sourceMap": true,
        "outDir": "dist-server",
        "strict": true,
        "lib": [
        "esnext"
        ],
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "paths": {
            "config/*": ["../config/*"],
            "common/*": ["../common/*"]
        },
    },
    "include": [
        "./*.ts",
        "../common/*.ts"
    ]
}